{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
	"labels": {
	    "name": "influxGrafana"
	},
	"name": "infludb-grafana",
	"namespace": "default"
    },
    "spec": {
	"replicas": 1,
	"selector": {
	    "name": "influxGrafana"
	},
	"template": {
	    "metadata": {
		"labels": {
		    "name": "influxGrafana"
		}
	    },
	    "spec": {
	      "volumes": [
                {
                  "name": "influxdata",
                  "hostPath": {
                    "path": "/home/core/influxdb"
                  }
                }
              ],
              "containers": [
		    {
			"image": "kubernetes/heapster_influxdb:v0.3",
			"name": "influxdb",
			"ports": [
			    {
				"containerPort": 8083,
				"hostPort": 8083
			    },
			    {
				"containerPort": 8086,
				"hostPort": 8086
			    }
			],
		        "volumeMounts": [
                          {
                            "name": "influxdata",
                            "mountPath": "/data"
                          }
                        ]
                    },
		    {
			"image": "grafana/grafana:2.1.0",
			"name": "grafana",
			"ports": [
			    {
				"containerPort": 3000,
				"hostPort": 3000
			    }
			]
		    }
		]
	    }          
	}
    }
}

