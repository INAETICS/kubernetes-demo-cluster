{
    "apiVersion": "v1beta1",
    "kind": "ReplicationController",
    "id": "ace-provisioning-controller",
    "labels": {
        "name": "ace-provisioning-controller"
    },
    "desiredState": {
        "replicaSelector": {
            "name": "ace-provisioning-pod"
        },
        "replicas": 1,
        "podTemplate": {
            "labels": {
                "name": "ace-provisioning-pod"
            },
            "desiredState": {
                "manifest": {
                    "version": "v1beta1",
                    "containers": [
                        {
                            "name": "ace-provisioning-container",
                            "image": "172.17.8.20:5000/inaetics/node-provisioning",
                            "command": [
                                "/tmp/node-provisioning.sh"
                            ],
                            "env": [
                                {
                                    "name": "ETCDCTL_PEERS",
                                    "value": "172.17.8.20:4001"
                                },
                                {
                                    "name": "HOSTPORT",
                                    "value": "8080"
                                }
                            ],
                            "ports": [
                                {
                                    "containerPort": 8080,
                                    "hostPort": 8080
                                }
                            ]
                        }
                    ]
                }
            }
        }
    }
}
