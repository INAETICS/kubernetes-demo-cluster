#cloud-config

coreos:
  update:
    group: alpha
    reboot-strategy: 'off'
  fleet:
    public-ip: $public_ipv4
    etcd_servers: http://172.17.8.20:4001
    metadata: role=kubernetes
  units:
    - name: etcd.service
      mask: true

    - name: fleet.service
      command: start

    - name: docker.service
      command: restart
      drop-ins:
        - name: 50-insecure-registry-and-weave.conf
          content: |
            [Service]
            Environment='DOCKER_OPTS=--insecure-registry="172.17.8.0/24" --bridge="weave" --restart="false" --host="tcp://127.0.0.1:4243"'

    - name: kubernetes-download.service
      command: start
      enable: true
      content: |
        [Unit]
        Description=Downloads Kubernetes for cluster nodes
        After=network-online.target
        Wants=network-online.target

        [Service]
        Type=oneshot
        RemainAfterExit=yes
        Environment="KUBE_VERSION=v0.13.1"
        ExecStart=/bin/bash -c 'mkdir -p /opt/bin'
        ExecStart=/bin/bash -c '/usr/bin/wget -P /opt/bin "https://storage.googleapis.com/kubernetes-release/release/$KUBE_VERSION/bin/linux/amd64/kube-proxy"'
        ExecStart=/bin/bash -c '/usr/bin/wget -P /opt/bin "https://storage.googleapis.com/kubernetes-release/release/$KUBE_VERSION/bin/linux/amd64/kubelet"'
        ExecStart=/bin/bash -c 'chmod 0755 /opt/bin/kube*'

        [Install]
        WantedBy=multi-user.target

    - name: 10-weave.network
      runtime: false
      content: |
        [Match]
        Type=bridge
        Name=weave*

        [Network]

    - name: weave-network.target
      enable: true
      content: |
        [Unit]
        Description=Weave Network Setup Complete
        Documentation=man:systemd.special(7)
        RefuseManualStart=no
        After=network-online.target

        [Install]
        WantedBy=multi-user.target

    - name: weave-install.service
      enable: true
      command: start
      content: |
        [Unit]
        Description=Install Weave
        Documentation=http://zettio.github.io/weave/
        Before=weave-configure.service

        [Service]
        Type=oneshot
        RemainAfterExit=yes
        TimeoutStartSec=0
        ExecStartPre=/usr/bin/wget -N -P /opt/bin https://github.com/zettio/weave/releases/download/v0.9.0/weave
        ExecStartPre=/usr/bin/wget -N -P /opt/bin https://raw.github.com/slintes/weave-demos/master/poseidon/weave-helper
        ExecStartPre=/usr/bin/chmod +x /opt/bin/weave
        ExecStartPre=/usr/bin/chmod +x /opt/bin/weave-helper
        ExecStart=/bin/echo Weave Installed

        [Install]
        WantedBy=weave-network.target

    - name: weave-configure.service
      enable: true
      command: start
      content: |
        [Unit]
        Description=Configure Weave
        Requires=network-online.target
        After=network-online.target

        [Service]
        Type=oneshot
        RemainAfterExit=yes
        ExecStart=/home/core/bin/weave-config.sh

        [Install]
        WantedBy=weave-network.target

    - name: weave-create-bridge.service
      enable: true
      command: start
      content: |
        [Unit]
        Description=Weave Bridge
        Requires=weave-configure.service
        After=weave-configure.service
        Before=docker.service

        [Service]
        Type=oneshot
        RemainAfterExit=yes
        EnvironmentFile=/etc/weave.env
        ExecStart=/opt/bin/weave create-bridge
        ExecStart=/usr/bin/ip addr add dev weave $BRIDGE_ADDRESS_CIDR
        ExecStart=/usr/bin/ip route add $BREAKOUT_ROUTE dev weave scope link
        ExecStart=/usr/bin/ip route add 224.0.0.0/4 dev weave

        [Install]
        WantedBy=weave-network.target

    - name: weave-helper.service
      enable: true
      command: start
      content: |
        [Unit]
        Description=Weave Network Helper
        Documentation=http://zettio.github.io/weave/
        Requires=docker.service
        After=docker.service

        [Service]
        ExecStart=/opt/bin/weave-helper

        [Install]
        WantedBy=weave-network.target

    - name: weave.service
      enable: true
      command: start
      content: |
        [Unit]
        Description=Weave Network Router
        Documentation=http://zettio.github.io/weave/
        Requires=docker.service
        After=docker.service

        [Service]
        Restart=always
        RestartSec=10s
        TimeoutStartSec=0
        EnvironmentFile=/etc/weave.env
        ExecStartPre=/usr/bin/docker pull zettio/weave:0.9.0
        ExecStartPre=/opt/bin/weave launch $WEAVE_PEERS
        ExecStart=/usr/bin/docker logs -f weave
        SuccessExitStatus=2
        ExecStop=/opt/bin/weave stop

        [Install]
        WantedBy=weave-network.target

